         cout << " {}              []     "<< "\n";
         cout << " {}             //\\\\    "<< "\n";
         cout << " {}            //  \\\\   "<< "\n";
         cout << " {}          (__)  (__) "<< "\n";
         cout << " {}                     "<< "\n";
         cout << " {}                     "<< "\n";
         cout << "{}{}{}{}{}{}{}{}{}{}{}{}"<< "\n";
        }
        }
}
else if(start==27)
{
    system("cls");
    cout << "zegnam";
    return 0;
}
}
